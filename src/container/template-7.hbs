{{!-- 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 --}}



<header class="header">
    {{#with header}}
    <div class="header_top">
        <div class="header_logo">{{brandName}}</div>
        <div class="nav-box">
        {{#each links}}
        <nav class="header_nav">
            <a class="nav_item" href="{{url}}">{{text}}</a>
        </nav>
        {{/each}}
        </div>
    </div>
    <div class="header_bottom">
        <div class="header_desc">
            <div class="desc_logo">Ad</div>
            <div class="desc_text">{{ad.text}}: <a class="header_link" href="{{ad.url}}">{{ad.url}}</a></div>
        </div>
        <div class="header_online">Users online: {{userOnline}}</div>
    </div>
    {{/with}}
</header>

<div class="hero">
    {{#with hero}}
        <div class="hero_items">
            <h1 class="hero_title">
                {{title}}
            </h1>
            <p class="hero_desc">
                {{description}}
            </p>
            {{#with button}}
                <a class="button hero_button" href="{{url}}">{{text}}</a>
            {{/with}}
        </div>
    {{/with}}
</div>
<div class="about">
    <div class="about_title">{{about.heading}}</div>
    <div class="about_desc">{{about.info}}</div>
</div>
<main class="articles">
    <div class="articles_header">
        <h2 class="articles_title">Our Articles</h2>
        <button class="articles_button">View All</button>
    </div>
    <div class="articles_cards">
        {{#each articles}}
            {{#if isNew}}
            <div class="articles_cards_item">
                <div class="img_box">
                    <img src="{{photo}}" alt="" class="card_photo">
                    <div class="new">NEW</div>
                </div>
                <h3 class="card_title">{{name}}</h3>
                <p class="card_desc">{{description}}</p>
                <button class="card_button">Read All</button>
            </div>
            {{else}}
            <div class="articles_cards_item">
                <img src="{{photo}}" alt="" class="card_photo">
                <h3 class="card_title">{{name}}</h3>
                <p class="card_desc">{{description}}</p>
                <button class="card_button">Read All</button>
            </div>
            {{/if}}
        {{/each}}
    </div>
</main>
      
<footer class="footer">
    {{#with footer}}
    <div class="pages">
        <div class="footer_nav">
            {{#each pages}}
                <a class="nav_item" href="{{path}}">{{name}}</a>
            {{/each}}
        </div>
        <div class="copyright">{{copyright}}</div>
    </div>
    {{/with}}
</footer>
    


