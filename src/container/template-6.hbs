{{!-- 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 --}}



<header class="header">
    <div>
        {{> logo}}
    </div>

    <nav class="header_nav">
       <div class="header_nav_right ">
            {{> nav list=header}}
        </div>
        </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}
    {{#with form}}
    <div class="form">

        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}" class="form_input"/>
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}" >
            <div>V</div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>

        <p class="form_info">{{info}}</p>

    </div>
    {{/with}}
</main>

<div class="updates">
    {{#with updates}}
        <h2 class="update_title">
            {{title}}
        </h2>
        <div class="update_list">
            {{#each list}}
            <div class="update_list_item">
                <div class="list_img">
                    32x32
                </div>
                <div class="list_data">
                    <p class="update_list_name">@{{nickname}}</p>
                    <p class="update_list_text">{{description}}</p>
                </div>
                </div>
            {{/each}}
        </div>
        <a href="{{show_all.url}}">{{show_all.text}}</a>
    {{/with}}
</div>

<div class="expirience">
    {{#with expirience}}
        <h2 class="exp_title">{{title}}</h2>
        <div class="exp_badge">{{badge}}</div>
        <div class="exp_card_list">
            {{#each list}}
                <div class="exp_card">
                    <h3 class="card_name">{{name}}</h3>
                    <p class="card_text">{{details}}</p>
                </div>
            {{/each}}
        </div>
    {{/with}}
</div>
      
<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
        <div>
            <span class="footer_title">{{title}}</span>
            {{>nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>
    


